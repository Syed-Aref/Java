


public class StringMethods {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s = "Syed Aref Ahmed";
		
		
		System.out.println( s.indexOf("ef") ); 
		System.out.println( s.indexOf("e") ); // 'e' could also be used
		// If the given string is found it returns the first occurance
		// of the string else returns -1
		
		
		
		String s_ = "Syed ";
		
		System.out.println( s.equals(s_) );
		System.out.println( s.equals("Syed Aref Ahmed") );
		System.out.println( s_.equals(s) );
		// If s is the same string as s_( or vice verse) it returns true else it returns false
		
		System.out.println( s.toUpperCase() ); // returns "SYED AREF AHMED"
		System.out.println( s.toLowerCase() ); // returns "syed aref ahmed"
		System.out.println(s); // However, s = Syed Aref Ahmed
		
	}
}
